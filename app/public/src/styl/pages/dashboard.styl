.map
  height calc(100vh - 200px)

.overlay
  width 100%
  height 100%
  background rgba(0, 0, 0, .8)
  position fixed
  top 0
  left 0

.overlay-content
  width 50%
  height 85%
  background $c0
  left 50%
  top 50%
  position absolute
  transform translate(-50%, -50%)
  padding 30px
  overflow auto

.overlay-main
  p
    margin 10px 0

  ul
    padding 0 0 0 20px
  li
    margin-bottom 20px
    div
      line-height 22px