/*
  WIDTHS

  Base:
    w = width

  Modifiers:
    10 = literal value 10px
    20 = literal value 20px
    30 = literal value 30px
    40 = literal value 40px

    -10 = literal value 10%
    -20 = literal value 20%
    -30 = literal value 30%
    -35 = literal value 35%
    -40 = literal value 40%
    -50 = literal value 50%
    -60 = literal value 60%
    -65 = literal value 65%
    -70 = literal value 70%
    -80 = literal value 80%
    -90 = literal value 90%
    -100 = literal value 100%
*/


// fixed widths
.w80
  width 80px

.w200
  width 200px

.w300
  width 300px

// variable widths
.w-10
  width 10%

.w-20
  width 20%

.w-30
  width 30%

.w-35
  width 35%

.w-40
  width 40%

.w-50
  width 50%

.w-60
  width 60%

.w-65
  width 65%

.w-70
  width 70%

.w-80
  width 80%

.w-90
  width 90%

.w-100
  width 100%
